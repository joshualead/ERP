<!-- Marks Entry -->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Side Bar start -->
    <%- include('../partials/sidebar_staff'); %>
      <!-- Side Bar end   -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">


          <!-- Begin Page Content -->
          <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <h1 class="h3 mb-4 text-gray-800">Marks Upload</h1>
            </div>
            <!-- Messages Display Start -->
            <% if(msg==1) { %>
              <script>
                swal("SUCCESS", "Marks Upload Successfully !!", "success");
              </script>
              <%}%>

                <% if(msg==2) {%>
                  <script>
                    swal("Error", "Some Error Occured!!", "error");
                  </script>

                  <%}%>
                    <!-- Messages Display End-->

                    <!-- Marks Bulk Upload Start -->
                    <a href="#" class="btn btn-success btn-icon-split" data-toggle="modal"
                      data-target="#UploadMarksModal">
                      <span class="icon text-white-50">
                        <i class="fas fa-file-upload"></i>
                      </span>
                      <span class="text">Marks File Upload</span>
                    </a>
                    <!-- Marks Bulk Upload End -->

                    <!-- Marks Bulk Template Start -->
                    <a id="download_link" download="template_marks.xlsx"
                      class="nav-link btn btn-warning btn-icon-split ml-2" href="../template/Marks_Template.xlsx">
                      <span class="icon text-white-50">
                        <i class="fas fa-file-excel"></i>
                      </span>
                      <span class="text">Download Marks Template</span>
                    </a>
                    <!-- Marks Bulk Template End -->


                    <!-- Marks Form Start -->
                    <div class="card o-hidden border-0 shadow-lg my-5">
                      <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row justify-content-center">
                          <div class="col-lg-6">
                            <div class="p-5">

                              <form class="user" action="/add_marks" method="POST">
                                <div class="row">
                                  <div class="form-group col">
                                    <input type="text" class="form-control form-control-user" placeholder="Course_Code"
                                      name="Course_Code">
                                  </div>
                                  <div class="form-group col">
                                    <input type="text" class="form-control form-control-user" placeholder="Regulation"
                                      name="Regulation">
                                  </div>
                                  <div class="form-group col">
                                    <select class="form-control" placeholder="Category" name="Category"
                                      style="border-radius: 50px;height: 50px;">
                                      <option value="CAT1">CAT1</option>
                                      <option value="CAT2">CAT2</option>
                                      <option value="MODEL">MODEL</option>
                                      <option value="CAT0">CAT0</option>
                                    </select>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="form-group col">
                                    <input type="text" class="form-control form-control-user" placeholder="Register No"
                                      name="Register_No">
                                  </div>
                                  <div class="form-group col">
                                    <select class="form-control" placeholder="Department" name="Department"
                                      style="border-radius: 50px;height: 50px;">
                                      <option value="CSE">CSE</option>
                                      <option value="EEE">EEE</option>
                                      <option value="MECHA">MECHA</option>
                                      <option value="MECHB">MECHB</option>
                                      <option value="IT">IT</option>
                                      <option value="ECE">ECE</option>
                                    </select>
                                  </div>

                                </div>
                                <div class="row">
                                  <div class="form-group col">
                                    <input type="text" class="form-control form-control-user" placeholder="Student Name"
                                      name="student_name">
                                  </div>


                                  <div class="form-group col">
                                    <input type="number" class="form-control form-control-user" placeholder="Semester"
                                      name="Semester">
                                  </div>
                                </div>

                                <div class="row">

                                  <div class="form-group col">
                                    <input type="number" class="form-control form-control-user" placeholder="Marks" name="Mark">
                                  </div>
                                  <div class="form-group col">
                                    <input class="form-control form-control-user" placeholder="Staff ID" name="Staff_ID">
                                  </div>
    
                                </div>
                                <input type="submit" name="submit" value="SUBMIT"
                              class="btn btn-primary btn-user btn-block">
                            </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
          </div>

          <!-- Marks Form End -->


          <!-- Footer -->
          <%- include('../partials/footer'); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

      </div>
      <!-- End of Page Wrapper -->

      <!-- Scroll to Top Button-->
      <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
      </a>

      <!-- Logout Modal Start -->
      <%- include('../partials/modals/logout_modal'); %>
        <!-- Logout Modal End   -->

        <!-- Staff Bulk Upload Start -->
        <%- include('../partials/modals/marks/marksBulkUpload'); %>
          <!-- Staff Bulk Upload End   -->

          <!-- Bootstrap core JavaScript-->
          <script src="vendor/jquery/jquery.min.js"></script>
          <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

          <!-- Core plugin JavaScript-->
          <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

          <!-- Custom scripts for all pages-->
          <script src="js/sb-admin-2.min.js"></script>

          <!-- Page level plugins -->
          <script src="vendor/chart.js/Chart.min.js"></script>

          <!-- Page level custom scripts -->
          <script src="js/demo/chart-area-demo.js"></script>
          <script src="js/demo/chart-pie-demo.js"></script>

</body>

</html>