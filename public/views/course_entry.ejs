<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>
    
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Side Bar start -->
        <%- include('../partials/sidebar_admin'); %>
        <!-- Side Bar end   -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-4 text-gray-800">Add courses</h1>
                </div>
                <!-- Messages Display Start -->
                <% if(msg == 1)  { %>
                    <script>
                        swal("SUCCESS","Course Created !!", "success");
                    </script>
                            <%}%>
            
                    <% if(msg == 2) {%>    
                        <script>
                            swal("Error","Some Error Occured!!", "error");
                        </script>
            
                <%}%> 
                <!-- Messages Display End -->


                <!-- Courses Bulk Upload Start -->
                <button  class="nav-link btn btn-success btn-icon-split ml-2" data-toggle="modal" data-target="#UploadCourseModal">
                    <span class="icon text-white-50">
                        <i class="fas fa-file-excel"></i>
                    </span>
                    <span class="text">Courses File Upload</span>
                </button>
                <!-- Courses Bulk Upload End -->

                <!-- Courses Bulk Template Start -->
                <a id="download_link" download="template_courses.xlsx" class="nav-link btn btn-warning btn-icon-split ml-2" href="../template/Courses_Template.xlsx">
                    <span class="icon text-white-50">
                        <i class="fas fa-file-excel"></i>
                    </span>
                    <span class="text">Download Course Template</span>
                </a>
                <!-- Courses Bulk Template End -->

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <form class="user" action="/add_course" method="POST">


                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                                aria-describedby="emailHelp"
                                                placeholder="Course Name"
                                                name="Course_Name">
                                        </div>
                                        
                                        <div class="row">    
                                            <div class="form-group col">
                                                <input type="text" class="form-control form-control-user"
                                                    placeholder="Course Code"
                                                    name="Course_Code">
                                            </div>

                                            <div class="form-group col">
                                                <input type="text" class="form-control form-control-user"
                                                    placeholder="Staff_ID"
                                                    name="Staff_ID">
                                            </div>

                                            <div class="form-group col">
                                                <input type="number" class="form-control form-control-user"
                                                    placeholder="Semester"
                                                    name="Semester">
                                            </div>


                                        </div>                                    

                                        <div class="row d-flex">    
                                            <div class="form-group col-4">
                                                <select class="form-control"
                                                placeholder="Department"
                                                name="Department" style="border-radius: 50px;height: 50px;">
                                                    <option value="CSE">CSE</option>
                                                    <option value="EEE">EEE</option>
                                                    <option value="MECHA">MECHA</option>
                                                    <option value="MECHB">MECHB</option>
                                                    <option value="IT">IT</option>
                                                    <option value="ECE">ECE</option>
                                                </select>    
                                            </div>


                                            <div class="form-group col">
                                                <input type="text" class="form-control form-control-user"
                                                    placeholder="Year"
                                                    name="Year">
                                            </div>


                                        </div>                                    

                                        <div class="row d-flex">    

                                            <div class="form-group col">
                                                <input type="text" class="form-control form-control-user"
                                                    placeholder="Regulation"
                                                    name="Regulation">
                                            </div>


                                        </div>                                    


                                    <hr>
                                    <input type="submit" name="Signup" value="SUBMIT"  class="btn btn-primary btn-user btn-block" >
                                    
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <%- include('../partials/footer'); %>
                <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Modals Start -->
<!-- EDIT COURSE MODAL-->
<div
  class="modal fade"
  id="editModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit</h5>
        <button
          class="close"
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Edit Form Start-->
        <form class="user" action="/edit_course" method="POST">
          <div class="form-group">
            <input
              type="text"
              class="form-control form-control-user"
              aria-describedby="emailHelp"
              placeholder="Course Name"
              name="Course_Name"
              id="Course_Name_Edit"
            />
          </div>

          <div class="row">
            <div class="form-group col">
              <input
                type="text"
                class="form-control form-control-user"
                placeholder="Course Code"
                name="Course_Code"
                id="Course_Code_Edit"
              />
            </div>

            
            <div class="form-group col">
              <input
                type="text"
                class="form-control form-control-user"
                placeholder="Staff ID"
                name="Staff_ID"
                id="Staff_ID_Edit"
              />
            </div>

            <div class="form-group col">
              <input
                type="number"
                class="form-control form-control-user"
                placeholder="Semester"
                name="Semester"
                id="Semester_Edit"
              />
            </div>
          </div>

          <div class="row d-flex">
            <div class="form-group col-4">
              <select
                class="form-control"
                placeholder="Department"
                name="Department"
                style="border-radius: 50px; height: 50px"
              >
                <option value="CSE">CSE</option>
                <option value="EEE">EEE</option>
                <option value="MECHA">MECHA</option>
                <option value="MECHB">MECHB</option>
                <option value="IT">IT</option>
                <option value="ECE">ECE</option>
              </select>
            </div>

            <div class="form-group col">
              <input
                type="text"
                class="form-control form-control-user"
                placeholder="Year"
                name="Year"
                id="Year_Edit"
              />
            </div>
          </div>

          <div class="row d-flex">
            <div class="form-group col">
              <input
                type="text"
                class="form-control form-control-user"
                placeholder="Regulation"
                name="Regulation"
                id="Regulation_Edit"
              />
            </div>
          </div>

          <hr />
          <input
            type="submit"
            name="edit"
            value="Save Changes"
            class="btn btn-success btn-user btn-block"
          />
        </form>
        <!-- Edit Form End-->
      </div>
    </div>
  </div>
</div>

    <!-- Logout Modal Start -->
    <%- include('../partials/modals/logout_modal'); %>
    <!-- Logout Modal End   -->

    <!-- Course Upload Modal Start-->
    <%- include('../partials/modals/courses/courseBulkUpload'); %>
    <!-- Course Upload Modal End-->

    <!-- Modals End -->

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>

</body>

</html>

